<h1>Dates</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="w-auto text-nowrap" scope="col">Date</th>
      <th class="w-auto text-nowrap" scope="col">Workouts</th>
      <th class="w-100">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% if @workout_dates.exists? %>
      <% @workout_dates.each do |workout_date| %>
        <tr>
          <td class="text-nowrap"><%= print_date workout_date.date %></td>
          <td class="text-nowrap"><%= workout_date.total %></td>
          <td class="text-end"><a href="<%= workout_list_path(print_date workout_date.date) %>">details</a></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="2">No dates found</td>
      </tr>
    <% end %>
  </tbody>
</table>

