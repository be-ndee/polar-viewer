<h1>Trainings</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="w-100" scope="col">Time</th>
      <th class="w-auto">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% if @trainings.exists? %>
      <% @trainings.each do |training| %>
        <tr>
          <td><%= print_time training.date %></td>
          <td><a href="<%= training_details_path training.id %>">details</a></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="2">No trainings found</td>
      </tr>
    <% end %>
  </tbody>
</table>

